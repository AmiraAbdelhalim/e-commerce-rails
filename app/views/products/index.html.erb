<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>In stock</th>
      <th>Category</th>
      <th>Brand</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= product.in_stock %></td>
      <td><%= product.category_name %></td>
      <td><%= product.brand_name %></td>
      <td><%= product.user_email %></td>
      <td>
        <% if(product.images.attached?) %>
        <strong>Image:</strong>
        <div class="card-deck my-2 float-right">
          <% product.images.each do |pic| %>
          <div class="card mx-2">
            <%= image_tag pic ,width:"100" ,height:"100"%>
          </div>
          <% end %>
        </div>
        <% end %>
      </td>
      <td><%= link_to 'Show', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

